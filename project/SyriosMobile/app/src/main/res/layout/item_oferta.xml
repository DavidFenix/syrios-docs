<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/card_round"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtDisciplina"
        android:text="Matemática"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#3b5ccc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtTurma"
        android:text="Turma: 1A"
        android:textSize="15sp"
        android:textColor="#444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/txtSerie"
        android:text="Série: 1º Ano"
        android:textSize="15sp"
        android:textColor="#444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtHorario"
        android:text="Horário:"
        android:textSize="14sp"
        android:textColor="#666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
</LinearLayout>
