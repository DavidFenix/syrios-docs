<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fundo branco -->
    <solid android:color="#FFFFFF" />

    <!-- Cantos arredondados -->
    <corners android:radius="20dp" />

    <!-- Borda suave azulada -->
    <stroke android:width="1dp" android:color="#e0e7ff" />

    <!-- Padding interno -->
    <padding
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp" />

</shape>
