<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SyriosMobile"
        android:name=".App">
        <activity
            android:name=".LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.professor.ofertas.MinhasOfertasActivity" />
        <activity android:name=".ui.professor.alunos.SelecionarAlunosActivity" />
        <activity android:name=".ui.professor.ocorrencias.RegistrarOcorrenciaActivity" />
        <activity android:name=".ui.professor.ocorrencias.MinhasOcorrenciasActivity" />

        <activity android:name=".ui.login.LoginProfessorActivity" />

        <activity
            android:name=".ui.choose.ChooseSchoolActivity" />

        <activity
            android:name=".ui.choose.ChooseRoleActivity" />

        <activity
            android:name=".ui.choose.ChooseSchoolWebActivity" />

        <activity
            android:name=".ui.choose.ChooseRoleWebActivity" />

        <activity android:name=".ui.professor.dashboard.ProfessorDashboardActivity" />

    </application>

</manifest>