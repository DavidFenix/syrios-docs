<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">SyriosMobile</string>
    <style name="Base.Theme.SyriosMobile" parent="Theme.Material3.DayNight.NoActionBar">
        
        
    </style>
    <style name="SyriosButton.Outline" parent="SyriosButtonBase">
        <item name="android:background">@drawable/btn_syrios_outline</item>
        <item name="android:textColor">#3b5ccc</item>
    </style>
    <style name="SyriosButton.Primary" parent="SyriosButtonBase">
        <item name="android:background">@drawable/btn_syrios_primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="SyriosButton.Secondary" parent="SyriosButtonBase">
        <item name="android:background">@drawable/btn_syrios_secondary</item>
        <item name="android:textColor">#3b5ccc</item>
    </style>
    <style name="SyriosButtonBase">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>

        
        <item name="android:minHeight">56dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <style name="SyriosEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>

        
        <item name="android:height">56dp</item>

        
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <style name="SyriosHintText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#666666</item> 
    </style>
    <style name="SyriosInput">
        <item name="android:background">@drawable/input_syrios</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:gravity">center_vertical</item>

        
        <item name="android:backgroundTint">@null</item>
    </style>
    <style name="SyriosInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:minHeight">56dp</item>

        <item name="hintTextAppearance">@style/SyriosHintText</item>   âœ” CORRETO

        
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/syrios_input_selector</item>

        
        <item name="boxBackgroundColor">#ffffff</item>

        
        <item name="shapeAppearance">@style/SyriosInputShape</item>

        
        <item name="hintTextColor">#666666</item>
    </style>
    <style name="SyriosInputShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>
    <style name="SyriosSubtitle">
        <item name="android:textColor">#dbe4ff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="SyriosTitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="Theme.SyriosMobile" parent="Base.Theme.SyriosMobile"/>
</resources>