<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CAMADA 1 – Fundo Azul -->
    <View
        android:id="@+id/bgBlue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#3b5ccc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- TÍTULO SOBRE O FUNDO AZUL -->
    <TextView
        android:id="@+id/txtTituloRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha o Papel"
        style="@style/SyriosTitle"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="8dp"/>

    <!-- SUBTÍTULO SOBRE O FUNDO AZUL -->
    <TextView
        android:id="@+id/txtSubtituloRole"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/SyriosSubtitle"
        android:text="Você possui mais de uma função nessa instituição. Selecione abaixo:"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/txtTituloRole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp"/>


    <!-- CAMADA 2 – FOLHA BRANCA ARREDONDADA -->
    <LinearLayout
        android:id="@+id/sheetWhite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/sheet_white_top_round"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtSubtituloRole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- SCROLL INTERNO -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- LISTA DE ROLES -->
                <RadioGroup
                    android:id="@+id/groupRoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <!-- BOTÃO ENTRAR – PADRÃO PRIMÁRIO -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnEntrarRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrar"
                    style="@style/SyriosButton.Primary"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"/>

                <!-- BOTÃO VOLTAR – PADRÃO SECUNDÁRIO -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVoltarRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voltar"
                    style="@style/SyriosButton.Secondary"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>