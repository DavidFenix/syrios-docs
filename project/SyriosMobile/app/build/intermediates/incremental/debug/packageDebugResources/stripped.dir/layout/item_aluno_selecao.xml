<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@drawable/card_round"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgAluno"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_role"
        android:background="@drawable/circle_white"
        android:padding="5dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtNomeAluno"
            android:text="Nome do aluno"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtTurmaAluno"
            android:text="Turma: 9A"
            android:textSize="14sp"
            android:textColor="#777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkboxAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
