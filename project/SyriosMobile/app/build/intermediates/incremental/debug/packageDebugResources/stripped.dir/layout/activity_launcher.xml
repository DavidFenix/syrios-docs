<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Camada 1 - Fundo azul -->
    <View
        android:id="@+id/backgroundBlue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#3b5ccc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Syrios Mobile"
        style="@style/SyriosTitle"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/txtSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha como deseja acessar"
        style="@style/SyriosSubtitle"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp"/>

    <!-- Camada 2 - Folha branca -->
    <LinearLayout
        android:id="@+id/bodySheet"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sheet_white_top_round"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:paddingHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/txtSub"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnProfessor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Professor"
            style="@style/SyriosButton.Primary"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:layout_marginBottom="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aluno"
            style="@style/SyriosButton.Secondary"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:layout_marginBottom="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnResponsavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Responsável"
            style="@style/SyriosButton.Secondary"
            android:backgroundTint="@null"
            app:backgroundTint="@null" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
