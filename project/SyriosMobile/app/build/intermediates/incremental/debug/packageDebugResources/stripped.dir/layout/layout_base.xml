<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CAMADA 1 â€“ Fundo azul -->
    <View
        android:id="@+id/bgBlue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#3b5ccc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/sym_def_app_icon"
            android:background="@drawable/circle_white"
            android:padding="5dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/txtEscola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SyriosTitle"
                android:text="Nome da Escola" />

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SyriosSubtitle"
                android:text="Nome do UsuÃ¡rio" />
        </LinearLayout>
    </LinearLayout>

    <!-- CAMADA 2 â€“ Folha branca -->
    <LinearLayout
        android:id="@+id/bodySheet"
        android:orientation="vertical"
        android:background="@drawable/sheet_white_only_top"
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÃ­tulo do corpo -->
        <TextView
            android:id="@+id/txtTituloBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo da Tela"
            android:textColor="#3b5ccc"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"/>

        <!-- Aqui o conteÃºdo real de cada activity serÃ¡ inflado -->
        <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="70dp"/>

    </LinearLayout>

    <!-- Sombra acima do menu -->
    <View
        android:id="@+id/bottomShadow"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:background="@drawable/shadow_top"
        app:layout_constraintBottom_toTopOf="@id/bottomMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- MENU INFERIOR -->
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:elevation="10dp"
        android:background="@drawable/sheet_white_top_round"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/menuHome"
            android:text="ðŸ "
            android:textSize="26sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/menuOcorrencias"
            android:text="ðŸ§‘â€ðŸ«"
            android:textSize="26sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/menuOfertas"
            android:text="ðŸ“š"
            android:textSize="26sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/menuExtra"
            android:text="â˜°"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
