<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<!-- CAMADA 1 — Fundo azul -->
<View
    android:id="@+id/bgBlue"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="#3b5ccc"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


<!-- TÍTULO (fica sobre o azul) -->
<TextView
    android:id="@+id/txtTituloEscolhaEscola"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Escolha a Escola"
    style="@style/SyriosTitle"
    android:layout_marginTop="40dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:paddingBottom="8dp"/>

<!-- SUBTÍTULO (sobre o azul) -->
<TextView
    android:id="@+id/txtSubtituloEscolhas"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Você possui vínculos em mais de uma instituição. Selecione abaixo:"
    style="@style/SyriosSubtitle"
    android:layout_marginTop="8dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:gravity="center_horizontal"
    app:layout_constraintTop_toBottomOf="@id/txtTituloEscolhaEscola"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:paddingBottom="16dp"/>


<!-- CAMADA 2 — FOLHA BRANCA ARREDONDADA -->
<LinearLayout
    android:id="@+id/sheetWhite"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:background="@drawable/sheet_white_top_round"
    android:padding="20dp"
    app:layout_constraintTop_toBottomOf="@id/txtSubtituloEscolhas"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- SCROLL DO CONTEÚDO INTERNO -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Lista de Escolas (cards adicionados dinamicamente) -->
            <LinearLayout
                android:id="@+id/containerEscolas"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

